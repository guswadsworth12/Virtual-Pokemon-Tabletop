<Window x:Class="AssaultBird2454.VPTU.SaveEditor.UI.Pokedex.Pokemon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssaultBird2454.VPTU.SaveEditor.UI.Pokedex"
        mc:Ignorable="d"
        Title="Pokemon" Height="643.111" Width="910.357">
    <Grid>
        <GroupBox x:Name="G_BasicInfo" Header="Basic Information" HorizontalAlignment="Left" VerticalAlignment="Top" Width="253" d:IsLocked="True">
            <Grid Margin="0">
                <TextBox x:Name="Name" Margin="89.506,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150.45"/>
                <Label Content="Species Name" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox x:Name="ID" Margin="89.506,29.96,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" Width="150.45" VerticalAlignment="Top"/>
                <Label Content="Species Dex#" Margin="0,25.96,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label Content="Type 1" HorizontalAlignment="Left" Margin="0,51.92,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="Type1" Margin="89.506,52.92,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150.45"/>
                <Label Content="Type 2" Margin="0,78.88,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <ComboBox x:Name="Type2" Margin="89.506,79.88,0,0" HorizontalAlignment="Left" Width="150.45" VerticalAlignment="Top"/>
                <Label Content="Size Class" HorizontalAlignment="Left" Margin="0,105.84,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="Size" Margin="89.506,106.84,0,0" HorizontalAlignment="Left" Width="150.45" VerticalAlignment="Top"/>
                <Label Content="Weight Class" Margin="0,132.8,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <ComboBox x:Name="Weight" Margin="89.506,133.8,0,0" HorizontalAlignment="Left" Width="150.45" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="G_BreedingInfo" Header="Gender Information" Margin="258,0,0,0" VerticalAlignment="Top" Height="144.72" HorizontalAlignment="Left" Width="180.697">
            <Grid Margin="0">
                <RadioButton x:Name="radioButton" Content="Male Only" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton x:Name="radioButton_Copy" Content="Female Only" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77.903,0,0,0"/>
                <RadioButton x:Name="radioButton_Copy1" Content="Both" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,19.96,0,0"/>
                <RadioButton x:Name="radioButton_Copy2" Content="Genderless" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="48.766,19.96,0,0"/>
                <Label x:Name="Chance_Male" Content="Chance to be Male:" HorizontalAlignment="Left" Margin="0,0,0,25.96" VerticalAlignment="Bottom"/>
                <Label x:Name="Chance_Female" Content="Chance to be Female:" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                <Slider x:Name="GenderRatio_Slider" Margin="0,0,0,56.92" Maximum="100" TickPlacement="BottomRight" Value="50" VerticalAlignment="Bottom"/>
                <TextBox x:Name="textBox" HorizontalAlignment="Right" Margin="0,0,0,29.96" TextWrapping="Wrap" Text="100" VerticalAlignment="Bottom" Width="40.11" TextAlignment="Center"/>
                <TextBox x:Name="textBox_Copy" HorizontalAlignment="Right" Margin="0,0,0,4" TextWrapping="Wrap" Text="100" VerticalAlignment="Bottom" Width="40.11" TextAlignment="Center" IsReadOnly="True"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="G_Resources" Header="Sprite Selection" Margin="0,186.72,0,238.431" HorizontalAlignment="Left">
            <Grid Margin="0">
                <Border x:Name="Image_Normal" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="0,5,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Unknown_Pokemon_Sprite.png"/>
                    </Border.Background>
                </Border>
                <Border x:Name="Image_Shiny" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="105,5,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Unknown_Pokemon_Sprite.png"/>
                    </Border.Background>
                </Border>
                <Border x:Name="Image_Egg" BorderBrush="Black" BorderThickness="1" Height="75" VerticalAlignment="Top" Margin="210,5,0,0" Width="75" d:LayoutOverrides="Width" HorizontalAlignment="Left">
                    <Border.Background>
                        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Unknown_Pokemon_Sprite.png"/>
                    </Border.Background>
                </Border>
                <Button x:Name="button" Content="Select Normal" HorizontalAlignment="Left" Margin="0,110,0,0" Width="100" VerticalAlignment="Top"/>
                <Button x:Name="button_Copy" Content="Select Shiny" HorizontalAlignment="Left" Margin="105,110,0,0" Width="100" VerticalAlignment="Top"/>
                <Button x:Name="button_Copy1" Content="Select Egg" Margin="210,110,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75"/>
                <Button x:Name="button_Copy2" Content="Import Resource" Margin="0,134.96,0.697,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
